<div class="request-page-container">
	<%= will_paginate @requests %>

	<% @requests.each do |request| %>
		<div class="request-container">

		<div class="votes">
		<%= form_for(request.votes.build) do |f| %>
			<div>
				<%= hidden_field_tag :request_id, request.id %>
				<%= hidden_field_tag :value, 1 %>
			</div>
			<%= f.button :submit, class: "up-arrow" do %>
					<div class="diag-up-right-line"></div>
					<div class="diag-up-left-line"></div>
			<% end %>
		<% end %>

		<%= form_for(request.votes.build) do |f| %>
			<div>
				<%= hidden_field_tag :request_id, request.id %>
				<%= hidden_field_tag :value, -1 %>
			</div>
			<%= f.button :submit, class: "down-arrow" do %>
				<div class="diag-up-right-line"></div>
				<div class="diag-up-left-line"></div>
			<% end %>
		<% end %>
		</div>

			<h3><%= request.title %></h2>
			<p><%= request.description %></p>

			<% if logged_in? %>
				<span class="delete-option">
					<%= link_to "Delete", request, method: :delete, data: {confirm: "Are you sure?"} %>
				</span>
			<% end %>
		</div>
	<% end %>

	<%= will_paginate @requests %>

	<h2>Submit your request or idea!</h2>
	<%= form_for @new_request do |f| %>
		<%= f.label :title %>
		<%= f.text_field :title %>
		<%= f.label :description %>
		<%= f.text_area :description %>
		<%= f.submit "Write in your request!" %>
	<% end %>
</div>