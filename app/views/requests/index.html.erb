<div class="request-page-container">
	<%= will_paginate @requests %>

	<% @requests.each do |request| %>
		<div class="request-container">

		<%= render 'votes', :request => request %>

		

			<h3><%= request.title %></h2>
			<p><%= request.description %></p>

			<% if logged_in? %>
				<span class="delete-option">
					<%= link_to "Delete", request, method: :delete, data: {confirm: "Are you sure?"} %>
				</span>
			<% end %>
		</div>
	<% end %>

	<%= will_paginate @requests %>

	<h2>Submit your request or idea!<%= @vote_cookies %></h2>
	<%= form_for @new_request do |f| %>
		<%= f.label :title %>
		<%= f.text_field :title %>
		<%= f.label :description %>
		<%= f.text_area :description %>
		<%= f.submit "Write in your request!" %>
	<% end %>
</div>