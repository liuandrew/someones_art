<div class="container">
	<%= form_for @drawing do |f| %>
		<%= f.label :name %>
		<%= f.text_field :name %>
		<%= f.label :description %>
		<%= f.text_area :description %>
		<%= f.label :cloudinary_url, "Use an existing Cloudinary image URL" %>
		<%= f.text_field :cloudinary_url %>
		<%= f.label :image, "Or upload a new image to Cloudinary" %>
		<%= f.hidden_field :image_cache %>
		<%= f.file_field :image %>

		<%= f.submit "Edit this drawing" %>
	<% end %>
</div>