<div class="container">
	<%= form_for @drawing do |f| %>
		<%= f.label :name %>
		<%= f.text_field :name %>
		<%= f.label :description %>
		<%= f.text_area :description %>
		<%= f.label :image_url, "Image URL" %>
		<%= f.text_field :image_url %>
		<%= f.label :image %>
		<%= f.hidden_field :image_cache %>
		<%= f.file_field :image %>

		<%= f.submit "Edit this drawing" %>
	<% end %>
</div>